{
    "manifest_version": 3,
    "name": "PXI Fusion",
    "version": "1.0",
    "description": "PXI Fusion is a loader to hack Prodigy Math Game.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestWithHostAccess",
      "webRequest",
      "activeTab",
      "scripting",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/icon16.png", "icons/icon48.png", "icons/icon128.png"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["*://*.prodigygame.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "host_permissions": ["*://*.prodigygame.com/*"],
    "options_page": "options.html"
  }
  